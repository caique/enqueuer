{
  "$id": "https://github.com/lopidio/enqueuer/requisition",
  "type": "object",
  "properties": {
    "timeout": {
      "type": ["integer", "string"],
      "title": "The requisition timeout",
      "default": "",
      "examples": [
        5000, 60000
      ]
    },
    "name": {
      "type": "string",
      "title": "The requisition name",
      "default": "",
      "examples": [
        "anyNameOrTitle"
      ]
    },
    "subscriptions": {
      "type": "array",
      "items": {
        "allOf": [
          {"$ref": "https://github.com/lopidio/enqueuer/subscription"},
          {"oneOf": [
            {"$ref": "https://github.com/lopidio/enqueuer/subscription/mqtt"},
            {"$ref": "https://github.com/lopidio/enqueuer/subscription/amqp"},
            {"$ref": "https://github.com/lopidio/enqueuer/subscription/sqs"},
            {"$ref": "https://github.com/lopidio/enqueuer/subscription/uds"},
            {"$ref": "https://github.com/lopidio/enqueuer/subscription/http"},
            {"$ref": "https://github.com/lopidio/enqueuer/subscription/zero-mq-sub"},
            {"$ref": "https://github.com/lopidio/enqueuer/subscription/stomp"},
            {"$ref": "https://github.com/lopidio/enqueuer/subscription/file"}
          ]}
        ]
      }
    },
    "startEvent": {
      "type": "object",
      "properties": {
        "subscription": {
          "allOf": [
            {"$ref": "https://github.com/lopidio/enqueuer/subscription"},
            {"oneOf": [
              {"$ref": "https://github.com/lopidio/enqueuer/subscription/mqtt"},
              {"$ref": "https://github.com/lopidio/enqueuer/subscription/amqp"},
              {"$ref": "https://github.com/lopidio/enqueuer/subscription/sqs"},
              {"$ref": "https://github.com/lopidio/enqueuer/subscription/uds"},
              {"$ref": "https://github.com/lopidio/enqueuer/subscription/http"},
              {"$ref": "https://github.com/lopidio/enqueuer/subscription/zero-mq-sub"},
              {"$ref": "https://github.com/lopidio/enqueuer/subscription/stomp"},
              {"$ref": "https://github.com/lopidio/enqueuer/subscription/file"}
            ]}
          ]
        },
        "publisher": {
          "allOf": [
            {"$ref": "https://github.com/lopidio/enqueuer/publisher"},
            {"oneOf": [
              {"$ref": "https://github.com/lopidio/enqueuer/publisher/mqtt"},
              {"$ref": "https://github.com/lopidio/enqueuer/publisher/sqs"},
              {"$ref": "https://github.com/lopidio/enqueuer/publisher/amqp"},
              {"$ref": "https://github.com/lopidio/enqueuer/publisher/uds"},
              {"$ref": "https://github.com/lopidio/enqueuer/publisher/http"},
              {"$ref": "https://github.com/lopidio/enqueuer/publisher/zero-mq-pub"},
              {"$ref": "https://github.com/lopidio/enqueuer/publisher/stomp"},
              {"$ref": "https://github.com/lopidio/enqueuer/publisher/file"}
            ]}
          ]
        }
      },
      "additionalProperties": false,
      "oneOf": [
        { "required": [ "subscription" ] },
        { "required": [ "publisher" ] }
      ]
    }
  },
  "additionalProperties": false,
  "required": [
    "subscriptions",
    "name",
    "startEvent"
  ]
}