{
  "$id": "https://github.com/lopidio/enqueuer/requisition",
  "type": "object",
  "properties": {
    "timeout": {
      "type": [
        "integer",
        "string"
      ],
      "title": "The requisition timeout",
      "default": "",
      "examples": [
        5000,
        60000
      ]
    },
    "name": {
      "type": "string",
      "title": "The requisition name",
      "default": "",
      "examples": [
        "anyNameOrTitle"
      ]
    },
    "id": {
      "type": "string"
    },
    "iterations": {
      "type": ["object", "number", "string"]
    },
    "delay": {
      "type": ["object", "number", "string"]
    },
    "onInit": {
      "type": "object",
      "title": "onInit hook function",
      "default": ""
    },
    "onFinish": {
      "type": "object",
      "title": "onFinish hook function"
    },
    "subscriptions": {
      "type": "array",
      "items": {
        "type": "object"
      }
    },
    "startEvent": {
      "type": "object",
      "properties": {
        "subscription": {
          "type": "object"
        },
        "publisher": {
          "type": "object"
        }
      },
      "additionalProperties": false,
      "oneOf": [
        {
          "required": [
            "subscription"
          ]
        },
        {
          "required": [
            "publisher"
          ]
        }
      ]
    },
    "requisitions": {
      "type": "array",
      "additionalProperties": false,
      "items": {
        "ref": "https://github.com/lopidio/enqueuer/requisition"
      }
    }
  },
  "additionalProperties": false,
  "required": [
    "startEvent"
  ]
}