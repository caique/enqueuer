{
  "name": "enqueuer",
  "version": "2.0.0",
  "description": "Polyglot flow testing tool",
  "main": "index.js",
  "scripts": {
    "start": "node js/index.js",
    "test": "npm run unitTest && npm run componentTest && npm run integrationTest",
    "unitTest": "jest --silent .test.ts",
    "componentTest": "jest --forceExit --silent .comp.ts",
    "integrationTest": "npm start -- -c examples/enqueuer.yml --session-variables zeroMqAddress=tcp://127.0.0.1:3000",
    "codeCoverage": "jest --silent --coverage",
    "lint": "node_modules/.bin/tslint --project tsconfig.json --force",
    "clean": "rm -rf js/ && find ./src -name '*.js' -type f -delete && rm -f temp/*",
    "all": "npm run clean && npm run lint && npm run build && npm link && npm run test && npm run codeCoverage",
    "build": "./scripts/generate-injectables-list.sh src/injectable-files-list.ts src && tsc"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lopidio/enqueuer"
  },
  "author": "Virgs",
  "license": "MIT",
  "bin": {
    "enqueuer": "js/index.js",
    "nqr": "js/index.js"
  },
  "dependencies": {
    "ajv": "^6.2.1",
    "amqp": "^0.2.6",
    "aws-sdk": "^2.255.1",
    "chalk": "^2.4.1",
    "chokidar": "^2.0.3",
    "commander": "^2.14.1",
    "conditional-injector": "^1.0.4",
    "express": "^4.16.3",
    "json-placeholder-replacer": "^1.0.12",
    "kafka-node": "^2.6.1",
    "log4js": "^2.9.0",
    "mqtt": "^2.17.0",
    "object-hash": "^1.3.0",
    "prettyjson": "^1.2.1",
    "stomp-client": "^0.9.0",
    "yamljs": "^0.3.0",
    "zeromq": "^4.6.0"
  },
  "devDependencies": {
    "@types/amqp": "^0.2.4",
    "@types/chokidar": "^1.7.5",
    "@types/express": "^4.16.0",
    "@types/jest": "^22.2.3",
    "@types/kafka-node": "^2.0.6",
    "@types/node": "^9.4.6",
    "@types/object-hash": "^1.2.0",
    "@types/prettyjson": "0.0.28",
    "@types/request": "^2.47.1",
    "@types/yamljs": "^0.2.30",
    "@types/zeromq": "^4.6.1",
    "jest": "^22.4.2",
    "ts-jest": "^22.4.1",
    "ts-node": "^4.1.0",
    "tslint": "^5.10.0",
    "typescript": "^2.7.2"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/publishers/**",
      "!src/subscriptions/**"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 20,
        "branches": 15,
        "functions": 20,
        "lines": 20
      }
    },
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": ".*\\.((comp)|(test))\\.ts$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ]
  }
}
