{
  "name": "enqueuer",
  "version": "1.0.1",
  "description": "Desktop client to send and receive messages from queue systems",
  "main": "index.js",
  "scripts": {
    "start": "node js/index.js",
    "test": "jest --forceExit && npm start -- -c integrationTest/enqueuer.yml",
    "enable-feature": "./scripts/enable-feature.sh",
    "build": "rm -rf js/ && find ./src -name '*.js' -type f -delete && ./scripts/import-injectable-files.sh && tsc && npm link"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lopidio/enqueuer"
  },
  "author": "Virgs",
  "license": "MIT",
  "bin": {
    "enqueuer": "js/index.js"
  },
  "dependencies": {
    "ajv": "^6.2.1",
    "chokidar": "^2.0.2",
    "commander": "^2.14.1",
    "log4js": "^2.5.3",
    "npm": "^5.8.0",
    "object-hash": "^1.3.0",
    "prettyjson": "^1.2.1",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@types/jest": "^22.2.0",
    "@types/node": "^9.4.6",
    "jest": "^22.4.2",
    "ts-jest": "^22.4.1",
    "ts-node": "^4.1.0",
    "tsd": "^0.6.5",
    "typescript": "^2.7.2"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": ".*\\.test\\.ts$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ]
  }
}
