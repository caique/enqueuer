{
  "name": "enqueuer",
  "version": "4.2.8",
  "description": "Multi IPC protocol CLI testing tool",
  "main": "js/index.js",
  "scripts": {
    "start": "node js/index.js",
    "prepublishOnly": "npm run clean && npm run build",
    "test": "npm run codeCoverage && npm run singleRunTest && npm run listsDescriptions",
    "unitTest": "NODE_ENV_TEST=true node_modules/.bin/jest --silent .test.ts",
    "singleRunTest": "nqr conf/singleRun.yml -a examples/requisition-navigation.yaml < misc/stdin && npm run validateOutput",
    "validateOutput": "yval --from=json outputExamples/singleRunOutput.json && yval --from=yaml outputExamples/singleRunOutput.yml",
    "codeCoverage": "NODE_ENV_TEST=true node_modules/.bin/jest --detectOpenHandles --coverage --silent",
    "listsDescriptions": "nqr -t > /dev/null && nqr -p > /dev/null && nqr -t > /dev/null",
    "lint": "node_modules/.bin/tslint --project tsconfig.json",
    "clean": "rm -rf js/ && find ./src -name '*.js' -type f -delete && rm -f temp/*",
    "updateHtml": "misc/mdToHtml.js",
    "all": "npm run clean && npm run lint && npm run build && npm link && npm run test && npm run updateHtml",
    "build": "node misc/generate-injectables-list.js src/injectable-files-list.ts src && tsc"
  },
  "keywords": [
    "event-driven",
    "teesting-tool",
    "tool",
    "microservice",
    "multiprotocol",
    "polyglot-flow",
    "reactive-systems",
    "message-testing",
    "test"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/enqueuer-land/enqueuer"
  },
  "author": "Virgs",
  "license": "MIT",
  "bin": {
    "enqueuer": "js/index.js",
    "nqr": "js/index.js"
  },
  "dependencies": {
    "chalk": "^2.4.2",
    "commander": "^2.19.0",
    "conditional-injector": "^1.0.15",
    "express": "^4.16.4",
    "glob": "^7.1.3",
    "json-placeholder-replacer": "^1.0.29",
    "log4js": "^4.0.2",
    "prettyjson": "^1.2.1",
    "request": "^2.88.0",
    "require-from-string": "^2.0.2",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@types/express": "^4.16.1",
    "@types/glob": "^7.1.0",
    "@types/jest": "^24.0.6",
    "@types/node": "^11.9.5",
    "@types/object-hash": "^1.2.0",
    "@types/prettyjson": "0.0.28",
    "@types/request": "^2.47.1",
    "@types/require-from-string": "^1.2.0",
    "@types/yamljs": "^0.2.30",
    "jest": "^24.1.0",
    "pagedown": "^1.1.0",
    "ts-jest": "^24.0.0",
    "ts-node": "^7.0.1",
    "tslint": "^5.13.0",
    "typescript": "^3.3.3333",
    "yval": "0.0.3"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "diagnostics": false
      }
    },
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/publishers/**",
      "!src/subscriptions/**"
    ],
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "text-summary"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 80,
        "branches": 80,
        "functions": 80,
        "lines": 80
      }
    },
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": ".*\\.test\\.ts$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ]
  }
}
