{
  "name": "enqueuer",
  "version": "1.0.0",
  "description": "Desktop client to send and receive messages from queue systems",
  "main": "index.js",
  "scripts": {
    "start": "node js/index.js",
    "test": "jest --forceExit",
    "build": "find ./src -name '*.js' -type f -delete && ./import-injectable-files.sh && tsc"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lopidio/enqueuer"
  },
  "author": "Virgs",
  "license": "MIT",
  "bin": {
    "enqueuer": "js/index.js"
  },
  "dependencies": {
    "@types/mqtt": "^2.5.0",
    "ajv": "^6.2.1",
    "amqp": "^0.2.6",
    "chokidar": "^2.0.2",
    "commander": "^2.14.1",
    "express": "^4.16.2",
    "json-sub": "^1.3.0",
    "log4js": "^2.5.3",
    "node-ipc": "^9.1.1",
    "npm": "^5.7.1",
    "prettyjson": "^1.2.1",
    "read-yaml": "^1.1.0"
  },
  "devDependencies": {
    "@types/jest": "^22.2.0",
    "@types/node": "^9.4.6",
    "jest": "^22.4.2",
    "ts-jest": "^22.4.1",
    "ts-node": "^4.1.0",
    "tsd": "^0.6.5",
    "typescript": "^2.7.2"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": ".*\\.test\\.ts$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ]
  }
}
